{
  "name": "bawei",
  "private": true,
  "version": "1.0.0",
  "description": "Cross-post WeChat Official Account articles to multiple platforms (draft/publish) with built-in diagnostics.",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run clean && BUILD_TARGET=development node scripts/inline-build.ts",
    "build:prod": "npm run clean && BUILD_TARGET=production node scripts/inline-build.ts",
    "preview": "vite preview",
    "e2e:v2": "npm run build && node scripts/v2-e2e.mjs",
    "e2e:export-state": "node scripts/export-mcp-storageState.mjs",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "type-check": "tsc --noEmit",
    "generate-icons": "node --no-warnings=ExperimentalWarning --loader=ts-node/esm scripts/generate-icons.ts",
    "publish": "node --no-warnings=ExperimentalWarning --loader=ts-node/esm scripts/publish.ts",
    "publish:cws": "node --no-warnings=ExperimentalWarning --loader=ts-node/esm scripts/chrome-webstore.ts",
    "clean": "rm -rf dist && rm -rf .tmp_build && rm -rf .tmp_build_prod",
    "check-i18n": "ts-node scripts/check-i18n.ts",
    "postinstall": "echo 'Dependencies installed successfully'",
    "prepare": "husky"
  },
  "dependencies": {
    "undici": "^7.11.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.268",
    "@types/diff": "*",
    "@types/node": "^20.14.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-legacy": "^5.4.1",
    "chrome-webstore-upload": "^3.1.4",
    "clipboardy": "*",
    "diff": "*",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "*",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.2",
    "sharp": "^0.33.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.3.1"
  },
  "keywords": [
    "chrome-extension",
    "wechat",
    "weixin",
    "weixin-official-account",
    "cross-post",
    "publisher",
    "content-publishing",
    "automation",
    "multi-platform"
  ],
  "author": "bawei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayqy/copy.git"
  },
  "bugs": {
    "url": "https://github.com/ayqy/copy/issues"
  },
  "homepage": "https://github.com/ayqy/copy#readme",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --max-warnings 0",
      "npm run check-i18n"
    ]
  }
}
