{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0.0",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_title": "__MSG_appName__",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mp.weixin.qq.com/*"
      ],
      "js": [
        "src/content/wechat-content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://mp.csdn.net/mp_blog/creation/editor*",
        "https://mp.csdn.net/mp_blog/creation/success*",
        "https://editor.csdn.net/*",
        "https://mp.csdn.net/mp_blog/manage/*",
        "https://blog.csdn.net/*"
      ],
      "js": [
        "src/content/csdn-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://cloud.tencent.com/developer/article/write*",
        "https://cloud.tencent.com/developer/creator/article*",
        "https://cloud.tencent.com/developer/article/*"
      ],
      "js": [
        "src/content/tencent-cloud-dev-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://i.cnblogs.com/posts/edit*",
        "https://i.cnblogs.com/posts*",
        "https://www.cnblogs.com/*"
      ],
      "js": [
        "src/content/cnblogs-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.oschina.net/blog/write*",
        "https://my.oschina.net/*/blog/write*",
        "https://my.oschina.net/*"
      ],
      "js": [
        "src/content/oschina-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.woshipm.com/writing*",
        "https://www.woshipm.com/*"
      ],
      "js": [
        "src/content/woshipm-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://note.mowen.cn/editor*",
        "https://note.mowen.cn/my/notes*",
        "https://note.mowen.cn/detail/*"
      ],
      "js": [
        "src/content/mowen-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://sspai.com/write*",
        "https://sspai.com/*"
      ],
      "js": [
        "src/content/sspai-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://baijiahao.baidu.com/*"
      ],
      "js": [
        "src/content/baijiahao-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://mp.toutiao.com/*"
      ],
      "js": [
        "src/content/toutiao-publisher.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://wuxinxuexi.feishu.cn/*"
      ],
      "js": [
        "src/content/feishu-docs-publisher.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/*",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
